<div class="container">
  <div class="d-flex justify-content-around align-self-center py-2 my-2">
    <h1>Activities Index</h1>
    <%= link_to 'Create an activity', new_activity_path, class: "btn btn-primary", role: "button" %>
  </div>
  
  <div class="row row-cols-1 row-cols-md-2">

    <% @activities.each do |activity| %>

      <%= link_to activity, style: "text-decoration: none; color: black" do %>
        <div class="col mb-4">
          <div class="card">
            <%= image_tag activity.main_photo, class: "card-img-top"  %>
            <div class="card-body">
              <h5 class="card-title"><%= activity.title %></h5>
              <h6><%= activity.organizer.name %></h6>
              <p class="card-text"><%= activity.description %></p>
              <p class="card-address"><%= activity.address %></p>
            </div>
          </div>        
        </div>
      <% end  %>

    <% end %>

  </div>
</div>
