<div class="container w-75 mt-4">
  <div class="jumbotron">
    <span class="small">id: <%= @activity.id %></span>
    <h1 class="display-4"><%= @activity.title %></h1>

    <p class="lead"><%= @activity.organizer.name %></p>
    <p><%= @activity.address %></p>
    <hr class="my-4">
    <p><%= @activity.description %></p>

    <%# @activity.tag_list.each do |tag| %>
      <%# <span> %>
        <%#= link_to tag, tagged_activities_path(tag: tag) %>
      <%# </span> %>
    <%# end %>

    <%= link_to 'Edit', edit_activity_path(@activity), class: "btn btn-primary btn-lg", role: "button" %>
  </div>

  <h2>Photo Gallery</h2>
  <div class="container w-100 mb-5">
    <div class="row row-cols-1 row-cols-md-2">
      <%= image_tag @activity.main_photo, class: "border border-primary" %>
      <% unless @activity.photo_1.blank? %>
        <%= image_tag @activity.photo_1, class: "" %>
      <% end %>
      <% unless @activity.photo_2.blank? %>
        <%= image_tag @activity.photo_2, class: "" %>
      <% end %>
      <% unless @activity.photo_3.blank? %>
        <%= image_tag @activity.photo_3, class: "" %>
      <% end %>
    </div>
  </div>

  <div class="container">
    <h2>Sessions for this activity</h2>
    <% @activity.sessions.each do |session| %>

      <div class="card w-75 my-1">
        <div class="card-body">
          <h5 class="card-title"><%= session.title %></h5>
          <p class="card-text"><%= session.instructor.name %></p>
          <p class="card-text">From: <%= session.start_time %>   to: <%= session.end_time.hour %>:<%= session.end_time.min %>0</p>
          <p class="card-text">Capacity <%= session.capacity %></p>
        </div>
      </div>
      
    <% end %>
  </div>
</div>  
