<div class="container w-75 mt-4">
  <div class="jumbotron">
    <h1 class="display-4"><%= @activity.title %></h1>
    <p class="lead"><%= @activity.organizer.name %></p>
    <p><%= @activity.address %></p>
    <hr class="my-4">
    <p><%= @activity.description %></p>

    <% @activity.tag_list.each do |tag| %>
      <span>
        <%#= link_to tag, tagged_activities_path(tag: tag) %>
      </span>
    <% end %>

    <%= link_to 'Edit', edit_activity_path(@activity), class: "btn btn-primary btn-lg", role: "button" %>
  </div>

  <h2>Photo Gallery</h2>
    